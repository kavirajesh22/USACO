#include<iostream>
#include <bits/stdc++.h> 
using namespace std;

int main()
{
    int n;
    int b;
    cin>>n;
    cin>>b;
    
    int sum=0;
    int arr[n];
    int ncounter=0;
    int cownumber=0;
    
    //read the cows
    do
    {
        cin>>arr[ncounter];
        ncounter=ncounter+1;
    }
    while (ncounter<n);
    
    //sort this out now
    int m = sizeof(arr)/sizeof(arr[0]);
    
    sort(arr, arr+n, greater<int>());
    
    //adding the cow heights and checking if they are greater than or equal to the required amount
    for (int i=0; i<m; ++i)
    {
        if (sum<b)
        {
            sum=sum+arr[i];
            cownumber=cownumber+1;
        }
        else
            i=m+1;
    }
    
    cout<<cownumber<<endl;
}

